<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insertarl"
    android:orientation="vertical"
    android:background="@drawable/insertar_fondo">

    <LinearLayout
        android:id="@+id/LL_toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/toolbarf">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        />
    
    <LinearLayout
        android:id="@+id/LL_titulo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LL_Espacio"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            />

        <EditText
            android:id="@+id/ET_titulo"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:hint="Titulo"
            android:gravity="center"
            android:inputType="text"
            android:textSize="15sp"
            android:fontFamily="@font/segoesc"
            />

        <EditText
            android:id="@+id/ET_fecha"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:hint="XX/XX/XX"
            android:gravity="center"
            android:inputType="date"
            android:textSize="15sp"
            android:fontFamily="@font/segoesc"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/ET_cuerpo"
        android:layout_width="210dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:fontFamily="@font/segoesc"
        />
    <LinearLayout
        android:id="@+id/LL_Espacio2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        />

    <Button
        android:id="@+id/BT_crear"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Crear"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:background="@color/purpura"
        android:fontFamily="@font/segoesc"
        />

</LinearLayout>